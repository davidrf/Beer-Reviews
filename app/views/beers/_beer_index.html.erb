<div class="row">
  <% @beers.each do |beer| %>
    <div class="large-4 small-6 columns">
      <%= link_to image_tag("fallback/default.jpg"), beer_path(beer), class: 'image-link' %>
      <div class="panel">
        <h5>  <%= link_to beer.name, beer_path(beer) %></h5>
        <p>by <%= link_to beer.brewery.name, brewery_path(beer.brewery) %></p>
        <h6 class="subheader">Rating: <%= beer.average_rating %></h6>
      </div>
    </div>
  <% end %>
</div>

<div class="pagination">
<%= paginate @beers %>
<%= page_entries_info @beers %>
</div>
