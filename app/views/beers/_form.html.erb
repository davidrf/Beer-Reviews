<%= form_for @beer do |f| %>
  <% if @beer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@beer.errors.count, "error") %> prohibited this beer from being saved:</h2>
      <ul>
      <% @beer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :brewery_id %><br>
    <%= f.select :brewery_id, Brewery.all.map { |b| [b.name, b.id] } %>
  </div>
  <div class="field">
    <%= f.label :style_id %><br>
    <%= f.select :style_id, Style.all.map { |s| [s.name, s.id] } %>
  </div>
  <div class="field">
    <%= f.label :abv, 'ABV' %><br>
    <%= f.text_field :abv %>
  </div>
  <div class="field">
    <%= f.label :ibu, 'IBU' %><br>
    <%= f.text_field :ibu %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :image, 'Image' %><br>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit "Submit Beer" %>
  </div>
<% end %>
